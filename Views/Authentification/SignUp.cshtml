@using SimpleBlog.Models.Registration;
@model AccountModel

<form asp-action="RegisterNewAccount"
    id="form-action"
    method="post"
    class="form-horizontal"
    role="form">
    

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Surname" class="form-label"></label>
            <input  asp-for="Surname" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Email" class="form-label"></label>
            <input type="email" asp-for="Email" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="NickName" class="form-label"></label>
            <input type="text" asp-for="NickName" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Password" class="form-label"></label>
            <input type="password" asp-for="Password" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
            <input type = "date" asp-for="DateOfBirth" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
            <input type="submit" id="form-button" class="btn btn-success" value="Sign Up" />
        </div>
    </div>

</form>
