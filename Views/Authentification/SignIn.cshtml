@using SimpleBlog.Models.Authentification;
@using System.Net;
@model SignInModel

<form asp-action="LogInByNickname"
	id="form-action"
	method="post"
	class="form-horizontal"
	role="form">

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="NickName" class="form-label"></label>
            <input type="text" asp-for="NickName" class="form-control" />
        </div>
    </div>

    @if (Model.Error.StatusCode == HttpStatusCode.NotFound)
    {
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
                <p style="color: red">@Model.Error.Message</p>
            </div>
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Password" class="form-label"></label>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
    </div>
    @if (Model.Error.StatusCode == HttpStatusCode.BadRequest)
    {
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
                <p style="color: red">@Model.Error.Message</p>
            </div>
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
            <input type="submit" id="form-button" class="btn btn-success" value="Sign In" />
        </div>
    </div>

</form>