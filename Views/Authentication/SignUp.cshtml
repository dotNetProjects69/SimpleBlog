@using SimpleBlog.Models.Authentication;
@using System.Net;
@model SignUpModel

<form asp-action="Register"
    asp-controller="SignUp"
    id="form-action"
    method="post"
    class="form-horizontal"
    role="form">
    

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Name" class="form-label">
                Name<span style="color: red;">*</span>
            </label>
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Surname" class="form-label"></label>
            <input  asp-for="Surname" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Email" class="form-label">
                Email<span style="color: red;">*</span>
            </label>
            <input type="email" asp-for="Email" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Nickname" class="form-label">
                Nickname<span style="color: red;">*</span>
            </label>
            <input type="text" asp-for="Nickname" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Password" class="form-label">
                Password<span style="color: red;">*</span>
            </label>
            <input type="password" asp-for="Password" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="ConfirmedPassword" class="form-label">
                Confirm password<span style="color: red;">*</span>
            </label>
            <input type="password" asp-for="ConfirmedPassword" class="form-control"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
            <input type="date" asp-for="DateOfBirth" class="form-control" value="@DateTime.Now:yyyy-MM-dd" />
        </div>
    </div>
    @if (Model.Error.StatusCode != HttpStatusCode.OK)
    {
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
                <p style="color: red">@Model.Error.Message</p>
            </div>
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
            <input type="submit" id="form-button" class="btn btn-success" value="Sign Up"/>
        </div>
    </div>

</form>
