@{
    ViewData["Title"] = "Blog";
}
@model PostViewModel

<div class="text-center">
	<h1 class="display-4">My Latest Posts</h1>
</div>

<div class="text-right">
	<a asp-controller="Posts" asp-action="NewPost">New Post</a>
</div>

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <div class="posts-container">
            @if (Model == null || Model.PostList == null)
            {
                <p>Model == null - @(Model == null) or/and Model.PostList == null @(Model?.PostList == null)"</p>
                return;
            }

            <p>@(Model.PostList.Count == 0)</p>

            @foreach (var p in Model.PostList)
            {
                <div class="post">
                    <h2><a asp-area="" asp-controller="Posts" asp-action="ViewPost" asp-route-id="@p.Id">@p.Title</a></h2>
                    <h5 class="text-muted">@p.UpdatedAt</h5>
                    <p>@p.Body</p>
                </div>
            }
        </div>
    </div>
</div>