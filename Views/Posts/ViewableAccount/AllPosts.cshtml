@model PostViewModel;


<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <div class="posts-container">
            @foreach (var p in Model.PostList)
            {
                <div class="post">
                    <h2>@p.Title</h2>
                    <h5 class="text-muted">@p.UpdatedAt.ToString("dd.MM.yyyy HH:mm:ss")</h5>
                    <p>@p.Body</p>
                    <a asp-controller="ViewablePosts"
                       asp-action="ViewPost"
                       asp-route-id ="@p.Id"
                       asp-route-nickname="@p.Nickname">Ещё...</a>
                </div>
            }
        </div>
    </div>
</div>

