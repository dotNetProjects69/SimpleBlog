@model PostViewModel;


<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <div class="posts-container">
            @foreach (var p in Model.PostList)
            {
                <div class="post">
                    <p style="color: black; font-size: 40px">@p.Title</p>
                    <p style="font-size: 30px">@p.Body</p>
                    <p class="text-muted">@p.CreatedAt.ToString("dd MMMM yyyy HH:mm")</p>
                    <div style="display: flex; align-items: center; margin-top: 15px;">
                        <img src="/Images/Icons/Like/Like Active.png" title="Like" alt="Like" width="25" style="margin-right: 8px;" />
                        <span style="font-size: 25px; color: #333; font-weight: lighter;">
                            @p.Likes
                        </span>
                    </div>
                    <a asp-controller="ViewablePosts"
                       asp-action="ViewPost"
                       asp-route-id="@p.Id"
                       asp-route-nickname="@p.Nickname">Ещё...</a>
                </div>
            }
        </div>
    </div>
</div>

