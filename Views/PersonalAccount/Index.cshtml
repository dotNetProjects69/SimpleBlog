@model AccountModel

<h2>@Model.Name</h2>

@if(Model.Surname != string.Empty)
{
	<p>@Model.Surname</p>
}

<p>@Model.Email</p>
<p>@Model.DateOfBirth</p>
<p>@Model.NickName</p>
<form asp-action="Delete"
      asp-controller="PersonalAccount"
      id="form-action"
      method="post"
      class="form-horizontal"
      role="form">

    <div class="row justify-content-lg-start">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
            <input style="background-color: red" type="submit" id="form-button" class="btn btn-success" value="Delete Account" />
        </div>
    </div>

</form>
