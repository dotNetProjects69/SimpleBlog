@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SimpleBlog.MVC.Validation.ViewModels.Post
@model UpdatingPostModel

<form asp-controller="Posts"
      asp-action="Update"
      method="post"
      id="form-action"
      class="form-horizontal"
      role="form">

      <div asp-asp-validation-summary="All" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Id" type="hidden" class="form-control"/>
            <input asp-for="Title" class="form-control" content="@Model.Title"/>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Body" class="form-label"></label>
            <textarea asp-for="Body" class="form-control" rows="5" cols="40" content="@Model.Body"></textarea>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
            <input type="submit" id="form-button" class="btn btn-success" value="Update Post" />
        </div>
    </div>

</form>
